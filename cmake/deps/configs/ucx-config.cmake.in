# Custom UCX configuration file to enable development with UCX shared libraries
# revendored with the Holoscan SDK binary distribution.
# Based on UCX 1.19.0 ucx-config.cmake

get_filename_component(prefix "${CMAKE_CURRENT_LIST_DIR}/../../.." ABSOLUTE)
set(exec_prefix "${prefix}")

if(NOT TARGET ucx::ucs)
  add_library(ucx::ucs SHARED IMPORTED)

  set_target_properties(ucx::ucs PROPERTIES
    IMPORTED_LOCATION "${exec_prefix}/lib/libucs.so"
    INTERFACE_INCLUDE_DIRECTORIES "${prefix}/include/3rdparty/ucx"
  )
endif()

if(NOT TARGET ucx::ucp)
  add_library(ucx::ucp SHARED IMPORTED)

  set_target_properties(ucx::ucp PROPERTIES
    IMPORTED_LOCATION "${exec_prefix}/lib/libucp.so"
    INTERFACE_INCLUDE_DIRECTORIES "${prefix}/include/3rdparty/ucx"
  )
endif()

if(NOT TARGET ucx::uct)
  add_library(ucx::uct SHARED IMPORTED)

  set_target_properties(ucx::uct PROPERTIES
    IMPORTED_LOCATION "${exec_prefix}/lib/libuct.so"
    INTERFACE_INCLUDE_DIRECTORIES "${prefix}/include/3rdparty/ucx"
  )
endif()

set(UCX_LIBRARIES "${exec_prefix}/lib")
set(UCX_INCLUDE_DIRS "${prefix}/include")

# Report UCX found message unless QUIET is specified
if(NOT ucx_FIND_QUIETLY)
  message(STATUS "Found UCX: ${ucx_DIR} (found version \"${ucx_VERSION}\")")
endif()
