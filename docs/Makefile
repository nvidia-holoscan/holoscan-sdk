# Minimal makefile for Sphinx documentation
# https://www.sphinx-doc.org/en/master/man/sphinx-build.html

# You can set these variables from the command line, and also
# from the environment for the first three.
.EXPORT_ALL_VARIABLES:
SPHINXOPTS       ?=
SPHINXBUILD      ?= sphinx-build
SPHINXAUTOBUILD  ?= sphinx-autobuild
SOURCEDIR     = .
BUILDDIR      = _build
DOXYGENDIR    = $(BUILDDIR)/doxygen
EXHALEDIR     = api/cpp

.PHONY: help Makefile

# Put it first so that "make" without argument is like "make help".
help:
	@$(SPHINXBUILD) -M help "$(SOURCEDIR)" "$(BUILDDIR)" $(SPHINXOPTS) $(O)
	@echo "  $$(tput setaf 4)livehtml$$(tput sgr0)    to make standalone HTML files with auto-reload"


# Match dirs for `html` and `doctrees` to what is generated by `sphinx-build` in "make-mode" (-M)
livehtml:
	$(SPHINXAUTOBUILD) "$(SOURCEDIR)" "$(BUILDDIR)/html" -d "$(BUILDDIR)/doctrees" $(SPHINXOPTS) $(O)

# Catch-all target: route all unknown targets to Sphinx using the new
# "make mode" option.  $(O) is meant as a shortcut for $(SPHINXOPTS).
%: Makefile
	@$(SPHINXBUILD) -M $@ "$(SOURCEDIR)" "$(BUILDDIR)" $(SPHINXOPTS) $(O)

clean:
	rm -rf $(BUILDDIR) $(DOXYGENDIR) $(EXHALEDIR)
